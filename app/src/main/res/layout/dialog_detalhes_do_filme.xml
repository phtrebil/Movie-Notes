<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/poster_filme"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="matrix"
            tools:src="@tools:sample/cities"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/titulo_do_filme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Avengers"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/poster_filme"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/subtitulo_do_filme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Endgame"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/titulo_do_filme"
            app:layout_constraintStart_toStartOf="@id/titulo_do_filme"/>

        <TextView
            android:id="@+id/informacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="Sobre"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/subtitulo_do_filme"
            app:layout_constraintTop_toBottomOf="@id/subtitulo_do_filme"/>

        <TextView
            android:id="@+id/Text_data_lancamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/data_de_lan_amento"
            app:layout_constraintStart_toStartOf="@id/informacao"
            app:layout_constraintTop_toBottomOf="@id/informacao"
            />

        <TextView
            android:id="@+id/data_lancamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            tools:text="2019"
            app:layout_constraintStart_toEndOf="@id/Text_data_lancamento"
            app:layout_constraintTop_toTopOf="@id/Text_data_lancamento"
            />

        <TextView
            android:id="@+id/titulo_nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:text="@string/avalia_o"
            app:layout_constraintStart_toStartOf="@id/Text_data_lancamento"
            app:layout_constraintTop_toBottomOf="@+id/Text_data_lancamento"/>

        <TextView
            android:id="@+id/nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="8.75"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/titulo_nota"
            app:layout_constraintTop_toTopOf="@id/titulo_nota"/>

        <TextView
            android:id="@+id/titulo_orcamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@string/or_amento"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/titulo_nota"
            app:layout_constraintStart_toStartOf="@id/titulo_nota"
            />

        <TextView
            android:id="@+id/orcamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="R$200.000.000,00"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/titulo_orcamento"
            app:layout_constraintTop_toTopOf="@id/titulo_orcamento"/>

        <TextView
            android:id="@+id/titulo_receita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="Receita:"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/titulo_orcamento"
            app:layout_constraintStart_toStartOf="@id/titulo_orcamento"
            />

        <TextView
            android:id="@+id/receita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="R$450.000.000,00"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/titulo_receita"
            app:layout_constraintTop_toTopOf="@id/titulo_receita"/>

        <TextView
            android:id="@+id/titulo_resumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="Resumo:"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/titulo_receita"
            app:layout_constraintStart_toStartOf="@id/titulo_receita"
            />

        <TextView
            android:id="@+id/resumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="resumo......................."
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/titulo_resumo"
            app:layout_constraintStart_toStartOf="@id/titulo_resumo"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>